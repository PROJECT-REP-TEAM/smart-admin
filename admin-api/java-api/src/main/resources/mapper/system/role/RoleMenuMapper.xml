<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.lab1024.smartadmin.module.system.role.dao.RoleMenuDao">
    <delete id="deleteByRoleId">
        delete
        from t_role_menu
        where role_id = #{roleId}
    </delete>
    <select id="queryMenuIdByRoleId" resultType="java.lang.Long">
        select menu_id
        from t_role_menu
        where role_id = #{roleId}
    </select>
    <select id="queryAllRoleMenu"
            resultType="net.lab1024.smartadmin.module.system.role.domain.entity.RoleMenuEntity">
        select * from t_role_menu
    </select>

    <select id="selectMenuListByRoleIdList"
            resultType="net.lab1024.smartadmin.module.system.menu.domain.entity.MenuEntity">

        SELECT
        t_menu.*
        FROM t_role_menu
        left join t_menu on t_role_menu.menu_id = t_menu.menu_id
        WHERE
        t_role_menu.role_id IN
        <foreach collection="roleIdList" open="(" separator="," close=")" item="id">
          #{id}
        </foreach>
        ORDER BY t_menu.sort ASC

    </select>
</mapper>